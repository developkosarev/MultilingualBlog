{% extends 'base.html.twig' %}

{% block title %}Posts!{% endblock %}

{% block body %}

<div class="container-fluid">
    <h1>Post</h1>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">{{ post.translate(app.request.locale).title }}</h5>
            <h6 class="card-subtitle mb-2 text-muted">{{ post.translate(app.request.locale).authorName }}</h6>
            <p class="card-text">
                {{ post.translate(app.request.locale).postText|markdown_to_html }}
            </p>
        </div>
    </div>

</div>
{% endblock %}
