{% extends 'base.html.twig' %}

{% block title %}Posts!{% endblock %}

{% block body %}

<div class="container-fluid">
    <h1>Posts</h1>

    <div class="list-group">

    {% for post in postItems %}

        <a href="{{ path('blog_show', {slug: post.translate(app.request.locale).slug}) }}" class="list-group-item list-group-item-action">
            <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1">{{ post.translate(app.request.locale).title }}</h5>
                <small class="text-muted">{{ post.publishedAt|date("m/d/Y") }}</small>
            </div>
            {#<p class="mb-1">{{ post.translate(app.request.locale).postText|markdown_to_html }}</p>#}
            <small class="text-muted">{{ post.translate(app.request.locale).authorName }}</small>
        </a>

    {% else %}
        <div>Empty</div>
    {% endfor %}

    </div>

</div>
{% endblock %}
